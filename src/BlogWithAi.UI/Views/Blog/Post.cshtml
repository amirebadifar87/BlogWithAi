@model BlogWithAi.Application.DTOs.PostDto
@{
    ViewData["Title"] = Model.Title;
    var comments = ViewBag.Comments as IEnumerable<BlogWithAi.Application.DTOs.CommentDto>;
}

<div class="container">
    <article class="blog-post my-5">
        <header class="mb-4">
            <h1 class="fw-bolder mb-1">@Model.Title</h1>
            <div class="text-muted fst-italic mb-2">
                Posted on @Model.PublishedAt?.ToString("MMMM dd, yyyy") by @Model.Author.Name
            </div>
            @if (Model.Category != null)
            {
                <a class="badge bg-secondary text-decoration-none" href="@Url.Action("Category", "Blog", new { slug = Model.Category.Slug })">
                    @Model.Category.Name
                </a>
            }
            @foreach (var tag in Model.Tags)
            {
                <span class="badge bg-primary">@tag.Name</span>
            }
        </header>

        @if (!string.IsNullOrEmpty(Model.FeaturedImage))
        {
            <figure class="mb-4">
                <img class="img-fluid rounded" src="@Model.FeaturedImage" alt="@Model.Title" />
            </figure>
        }

        <section class="mb-5">
            @Html.Raw(Model.Content)
        </section>
    </article>

    <section class="mb-5">
        <div class="card bg-light">
            <div class="card-body">
                <h4 class="card-title">Comments (@(comments?.Count() ?? 0))</h4>

                @if (comments != null && comments.Any())
                {
                    @foreach (var comment in comments)
                    {
                        <div class="d-flex mb-4">
                            <div class="flex-shrink-0">
                                <img class="rounded-circle" src="https://via.placeholder.com/50" alt="..." />
                            </div>
                            <div class="ms-3">
                                <div class="fw-bold">@comment.AuthorName</div>
                                <div class="text-muted small">@comment.CreatedAt.ToString("MMMM dd, yyyy")</div>
                                @comment.Content

                                @if (comment.Replies.Any())
                                {
                                    <div class="ms-4 mt-3">
                                        @foreach (var reply in comment.Replies)
                                        {
                                            <div class="d-flex mb-3">
                                                <div class="flex-shrink-0">
                                                    <img class="rounded-circle" src="https://via.placeholder.com/40" alt="..." />
                                                </div>
                                                <div class="ms-3">
                                                    <div class="fw-bold">@reply.AuthorName</div>
                                                    <div class="text-muted small">@reply.CreatedAt.ToString("MMMM dd, yyyy")</div>
                                                    @reply.Content
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>No comments yet. Be the first to comment!</p>
                }

                <hr class="my-4" />
                <h5>Leave a Comment</h5>
                <form asp-controller="Blog" asp-action="AddComment" method="post">
                    <input type="hidden" name="PostId" value="@Model.Id" />
                    <div class="mb-3">
                        <label for="AuthorName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="AuthorName" name="AuthorName" required />
                    </div>
                    <div class="mb-3">
                        <label for="AuthorEmail" class="form-label">Email (optional)</label>
                        <input type="email" class="form-control" id="AuthorEmail" name="AuthorEmail" />
                    </div>
                    <div class="mb-3">
                        <label for="Content" class="form-label">Comment</label>
                        <textarea class="form-control" id="Content" name="Content" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit Comment</button>
                </form>
            </div>
        </div>
    </section>
</div>
